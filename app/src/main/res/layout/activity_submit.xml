<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutSubmit"
    tools:context=".SubmitActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dataCollectorLayoutSubmit"
            android:orientation="horizontal"
            android:background="@drawable/rounded_top_header"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_mic"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"/>
            <TextView
                android:id="@+id/dataCollectorSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aladin"
                android:text="Data Collector"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="56sp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_location"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:contentDescription="TODO" />

        </LinearLayout>



        <TextView
            android:id="@+id/contactFormSubmit"
            android:layout_width="wrap_content"
            android:layout_below="@+id/dataCollectorLayoutSubmit"
            android:layout_height="wrap_content"
            android:text="CONTACT FORM"
            android:fontFamily="@font/aladin"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/stepFourSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactFormSubmit"
            android:text="Step 4: Submit"
            android:textColor="@color/gray"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:layout_marginBottom="24dp"
            />

        <LinearLayout
            android:id="@+id/submissionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/stepFourSubmit"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/genderTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/genderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:hint="M/F/O"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="----"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/submissionTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submission Time: "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/submissionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--/-- --:--:--"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gpsLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS Location: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/gpsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Longitude: 0.0000, Latitude: 0.0000"
                android:textColor="@color/blue"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/previewImageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview Image: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
            <ImageView
                android:id="@+id/selfiePreview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="TODO"
                android:src="@drawable/avatare"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="128dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">



            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>